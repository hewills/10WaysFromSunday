function hTable_Look()
{
  cDebra.Say("It's my craft table. I use it for painting and crafting.");
}

function hTable_Interact()
{
  if (!cDebra.HasInventory(iPhone)) {
    
    cDebra.Say("I'll grab my cellphone.");
    cDebra.AddInventory(iPhone);
  }
  else {
    cDebra.Say("My craft table is empty.");
  }
}

