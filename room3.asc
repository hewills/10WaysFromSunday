function room_Load()
{
  oCat.SetView(9);  
  oCat.Animate(0, 15, eRepeat, eNoBlock, eForwards);
  
  if (oFrame.Visible == true && oFrame.Graphic == 151) {
    //Hang it on the wall
   oFrame.X = 190;
   oFrame.Y = 88;
  }
}

