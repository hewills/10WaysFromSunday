// room script file

function room_Load()
{
  cDebra.on = false; //don't show character until rain shows up
   
  //Make it rain
srChangeRainAmount(500);
srSetRainWindSpeed(50);
srSetRainBaseline(120,300);
srSetRainFallSpeed(100,150);

  Mouse.Visible = false; //hide mouse during cutscene
  
}

function room_AfterFadeIn()
{
 
  Wait(70);
  
  cDebra.SpeechView = 5; //Change speak view to "Rain Speak View"
  cDebra.on = true;  

  cDebra.LockView(4);  //Standing in rain view
  
  cDebra.Animate(0, 5, eRepeat, eNoBlock, eForwards);

  cTimothy.Say("Hello?");
    cTimothy.Say("...");
  cTimothy.Say("Debra?");
   
   Wait(20);
   
  cDebra.Say("Timothy!");
  cDebra.Say("Timothy, where are you?!");
  cDebra.Animate(0, 5, eRepeat, eNoBlock, eForwards);
    
  Wait(20);
  
  cTimothy.Say("What is this place?");
  cTimothy.Say("Where am I?");
  
  Wait(70);
    
  cDebra.Say("I can't see you!");
  cDebra.Say("HELLO?!");
  cDebra.Say("...");
  cDebra.Say("TIMOTHY!");
  cDebra.Say("...");
  cDebra.Say("TIM...!!");
  
  cDebra.Animate(0, 5, eRepeat, eNoBlock, eForwards);
  
  Mouse.Visible = true;
  
}
