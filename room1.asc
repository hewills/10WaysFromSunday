function hBox_Interact()
{
  if (comm_done == 5 && look_at_decoration == 1 && !cDebra.HasInventory(iMusic) && !organist_dead) {
    
   cDebra.Say("I'll take this sheet music with a lot of bass.");
   cDebra.AddInventory(iMusic);
