// room script file
int musicplaying = 0;

// Set room background
function room_Load()
{

  if (comm_done < 3) {
     SetBackgroundFrame(0);
     hBox.Enabled = false;
     hMop.Enabled = false;
     oDraino.Visible = false;
  }
  else {
  // Open Utility closet
  
  SetBackgroundFrame(1);
  
    //If Debra hasn't picked up Draino yet
    if (!cDebra.HasInventory(iDraino) && comm_done <= 5) {
        oDraino.Visible = true;
     }
     hBox.Enabled = true;
     hMop.Enabled = true;
  }
  
}

function room_AfterFadeIn()
{
  if (comm_done >= 3 && comm_done <= 5) {
   if (!organist_dead && !receptionist_dead) {
     
    if (dminor != null) {
          
         if (dminor.IsPlaying) {
            dminor.Volume = 5;
         }
         else {
          dminor = a10Dminor.Play(); 
          dminor.Volume = 5;
         }
    }
    else {
      dminor = a10Dminor.Play();
      dminor.Volume = 5;
       } 
   }   
  }  
}


function room_FirstLoad()
{
  //Congregation singing
  AudioChannel *music = aGodbewithyou.Play();
  music.Volume = 30;
  
  cDebra.Say("I keep dreaming of Timothy.");
  cDebra.Say("Ever since his passing, he won't leave my dreams.");
  cDebra.Say("Something is wrong.");
  cDebra.Say("His soul is lost. And I pray, but get no answers.");
  cDebra.Say("I need to get God's attention.");
  cDebra.Say("But how?");
  cDebra.Say("Maybe this week's Bible study guide will inspire me.");

 musicplaying = 1;
 
 Display("TO PLAY:  Left-click to Interact. Right-click to Look");
 
}


function room_Leave()
{
  if (dminor != null && dminor.IsPlaying)
  dminor.Stop();
}

