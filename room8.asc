function oFlyer_UseInv()
{
  if (cDebra.ActiveInventory == iPhone && called_police == 0) {
    
    phoneRinging = aRinging.Play(eAudioPriorityHigh, eOnce);
     while (phoneRinging.IsPlaying)  Wait(1);
     
    Wait(75);

     cMom.SayAt(70, 191,200, "Police Tip line. Do you have a tip?");
     cDebra.Say("I do. I know who commited the murder.");
     
     cMom.SayAt(70, 191,200, "Really? Okay, do you have a name?");
     cDebra.Say("Skip Gote");
     cMom.SayAt(70, 191,200, "Okay. We'll send officers to investigate.");
     Display("<Hung up>");
     
     cDebra.Say("I need to make sure the police find evidence of Skip being there.");
     called_police = 1;
  }
  else cDebra.Say("I already called them.");
  
}
